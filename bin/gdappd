import os
import gettext
from gd import conf
from gd.content import app


gettext.install(
    'gabinetedigital',
    os.path.join(os.path.dirname(__file__), '..', 'po'))


def run():
    app.debug = conf.DEBUG
    app.run(conf.HTTP_HOST, conf.HTTP_PORT)


if __name__ == '__main__':
    run()
