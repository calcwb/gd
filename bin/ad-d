import werkzeug.serving
from socketio import SocketIOServer
from gevent import monkey
monkey.patch_thread()
monkey.patch_time()

from ad.content import app
from ad.buzz import sio
from ad import conf


@werkzeug.serving.run_with_reloader
def run():
    app.debug = conf.HTTP_DEBUG
    server = SocketIOServer(
        (conf.HTTP_HOST, conf.HTTP_PORT),
        sio.BuzzApp(app),
        resource='socket.io')
    server.start()


if __name__ == '__main__':
    run()
